   <div class="row col-12">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">


                        <h4 class="mt-0 header-title">Sales Report</h4>
                        <form action="/admin/dateSales" method="post">
                            <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0"
                                width="100%">
                                <input type="datetime-local" name="fromDate" id="" class="mb-3" value="2022-06-12T19:30">
                                <input type="text"  id="" value="TO" class="text-center" readonly  style="width:50px;">
                                <input type="datetime-local" name="toDate" id="" value="2022-06-12T19:30">
                                <button type="submit" class="btn btn-small btn-dark ml-3">submit date</button>
                                <thead>
                                    <tr>
                                            <th>Date</th>
                                        <th>Total Price</th>
                                        <th>Total Discount</th>
                                        <th>Total Coupon Discount</th>
                                        <th>Total wallet used</th>
                                        <th>Total After Discount</th>
                                        <th>Total Sales</th>

                                    </tr>
                                </thead>


                                <tbody>
                                    {{#each dailySales}}
                                    <tr>
                                            <td>{{this._id.day}}-{{this._id.month}}-{{this._id.year}}</td>
                                        <td>{{this.SubTotal}}</td>
                                        <td>{{this.DiscountAmount}}</td>
                                        <td>{{this.couponTotal}}</td>
                                        <td>{{this.walletTotal}}</td>
                                        <td>{{this.grandTotal}}</td>
                                        <td>{{this.TotalAmount}}</td>

                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </form>

                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->