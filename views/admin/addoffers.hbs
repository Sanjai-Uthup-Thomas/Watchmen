<script>
     var categoryError = document.getElementById('categoryOffer-error');
    var SubmitError = document.getElementById('submit-error');

        function validateCategory(){
        var category = document.getElementById('categoryOffer').value
        if(category.length==0){
            categoryError.innerHTML ="Required"
            return false
        }
        if(!category.match(/^0*(?:[1-9][0-9]?|99)$/)){
            categoryError.innerHTML="Enter offer from 1-99"
            return false
        }
        categoryError.innerHTML =""
        return true
    }
      function validateForm(){
        
        if(!validateCategory()){
            SubmitError.innerHTML= "Please fix the form"
            return false
        }
    }

</script>
