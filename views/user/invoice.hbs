							</div>
							<!-- Row end -->
						</div>
						<div class="invoice-body">
							<!-- Row start -->
							<div class="row gutters">
								<div class="col-lg-12 col-md-12 col-sm-12">
									<div class="table-responsive">
                                        
										<table class="table custom-table m-0">
											<thead>
												<tr>
													<th>Items</th>
													<th>Product ID</th>
                                                    <th>Price</th>
													<th>Quantity</th>
                                                    <th>Discount</th>
                                                    <th>Total Price</th>
													
												</tr>
											</thead>
											<tbody>
                                                {{#each products.orderItems}}
